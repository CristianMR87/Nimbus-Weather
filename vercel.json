{
    "builds": [
        {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
        },
        {
        "src": "backend/app.py",
        "use": "@vercel/python"
        }
    ],
    "routes": [
        {
        "src": "/weather/(.*)",
        "dest": "/backend/app.py"
        },
        {
        "src": "/(.*)",
        "dest": "/frontend/dist/$1"
        }
    ]
}